<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RomanNumberPro.Views.RomanPage">
    <Grid>
        <VerticalStackLayout Padding="16" Spacing="12"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">
            <Label Text="Enter a Roman numeral"
                   HorizontalOptions="Center" />
            <Entry x:Name="RomanEntry" 
                   Placeholder="Roman Number" 
                   TextTransform="Uppercase"
                   HorizontalOptions="Center"
                   WidthRequest="260" />
            
            <BoxView HeightRequest="1" BackgroundColor="Black" />
            <Button Text="Convert to Number" Clicked="ConvertN" />
            <BoxView HeightRequest="1" BackgroundColor="Black" />
                
            <Label Text="Results:" FontAttributes="Bold"
                   HorizontalTextAlignment="Center"/>
            <Label x:Name="NResult" HorizontalTextAlignment="Center" />
                
            <Label x:Name="ErrorN" TextColor="Red" IsVisible="False"
                   HorizontalTextAlignment="Center" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>