<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RomanNumberPro.Views.NumberPage">
    <Grid RowDefinitions="*,Auto" Padding="16">
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="12"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center">
                <Label Text="Enter a Number"
                       HorizontalOptions="Center" />
                <Entry x:Name="NEntryNum" 
                       Placeholder="Number" 
                       Keyboard="Numeric"
                       HorizontalOptions="Center"
                       WidthRequest="260" />
                
                <Label Text="Results: " FontAttributes="Bold"
                       HorizontalTextAlignment="Center" />
                <Label x:Name="RResult" HorizontalTextAlignment="Center" />
                
                <Label x:Name="ErrorR" TextColor="Red" IsVisible="False"
                       HorizontalTextAlignment="Center" />
            </VerticalStackLayout>
        </ScrollView>
        <Button Grid.Row="1"
                Text="Convert to Roman" 
                Clicked="ConvertR"
                HorizontalOptions="Center"/>

    </Grid>
</ContentPage>